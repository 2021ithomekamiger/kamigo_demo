<%= raw (Kamiflex.json(self) do
  alt_text "LINE Flex Message Showcases"
  carousel do
    bubbles @showcases do |name|
      body paddingAll: "0px" do
        horizontal_box paddingTop: "10px", paddingStart: "20px", paddingBottom: "7px"do
          text name, size: :md, weight: :bold
        end
        image "https://#{request.host}/images/flex_showcases/#{name.underscore.tr(" ","_")}.png", size: :full, aspectRatio: "456:290"
        message_button "查看", "flex/showcases/#{name.underscore.tr(" ","_")}", margin: "md"
      end
    end
  end
end) %>