<%= raw(
Kamiflex.json(self) do
  alt_text "#{params.dig(:profile, :displayName)}的個人檔案"
  bubble size: :kilo do
    body do
      horizontal_box do
        filler
        horizontal_box backgroundColor: "#00ccff", cornerRadius: "500px" do
          image params.dig(:profile, :pictureUrl)
        end
        filler
      end
      text params.dig(:profile, :displayName), align: :center, margin: :lg, wrap: true
      text params.dig(:profile, :statusMessage), align: :center, wrap: true, size: :xs if params.dig(:profile, :statusMessage).present?
    end
  end
end
)%>





