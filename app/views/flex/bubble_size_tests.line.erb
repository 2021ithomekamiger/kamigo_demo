<%= raw (Kamiflex.json(self) do
  alt_text "Flex 尺寸測試"
  carousel do
    bubbles 2.times, size: params[:size] do
      body paddingAll: "0px", height: "500px" do
        text params[:size], size: :xl, weight: :bold, align: :center
        25.times do |i|
          horizontal_box position: :absolute, width: "20px", height: "20px",
          backgroundColor: "#cccccc", offsetTop: "#{i*20}px", offsetStart: "#{i*20}px" do
            text "#{i}", size: :xs, align: :center, gravity: :center
          end
        end
      end
    end
  end
end) %>